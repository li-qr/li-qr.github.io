---
layout: none
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.categories | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}

  {% for art in site.article%}
    ,{
      "title"    : "{{ art.title | escape }}",
      "category" : "{{ art.category }}",
      "tags"     : "{{ art.categories | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ art.url }}",
      "date"     : "{{ art.date }}"
    }
  {% endfor %}

  {% assign pdf_files = site.static_files | where: "pdf", true %}
  {% for mypdf in pdf_files %}
  ,{
      "title"    : "{{ mypdf.name | escape }}",
      "category" : "{{ mypdf.extname }}",
      "url"      : "{{ site.baseurl }}{{ mypdf.path }}",
      "date"     : "{{ mypdf.modified_time }}"
    }
  {% endfor %}


  {% for poe in site.poetry%}
    ,{
      "title"    : "{{ poe.title | escape }}",
      "category" : "{{ poe.categories }}",
      "url"      : "{{ site.baseurl }}{{ poe.url }}",
      "tags"     : "{{ poe.time }}"
    }
  {% endfor %}
]